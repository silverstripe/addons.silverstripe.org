{
    "name": "silverstripe/addons.silverstripe.org",
    "description": "The SilverStripe addons listing site",
    "require": {
        "php": "^8.1",
        "silverstripe/recipe-core": "^4.13",
        "silverstripe/admin": "^1.13",
        "composer/composer": "^2.0",
        "knplabs/packagist-api": "dev-pulls/static-get as 2.0.0",
        "guzzlehttp/guzzle": "^7",
        "symbiote/silverstripe-queuedjobs": "^4",
        "silverstripe/crontask": "^2.0",
        "silverstripe/environmentcheck": "^2.0",
        "aws/aws-sdk-php": "^3.55",
        "symbiote/silverstripe-gridfieldextensions": "^3.1",
        "symbiote/silverstripe-multivaluefield": "^5.0",
        "ezyang/htmlpurifier": "^4.10",
        "silverstripe/toolbar": "^5@dev"
    },
    "require-dev": {
        "silverstripe/recipe-testing": "^2"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/silverstripe/silverstripe-globaltoolbar.git"
        }
    ],
    "extra": {
        "resources-dir": "_resources",
        "expose": [
            "themes/addons/bootstrap",
            "themes/addons/css",
            "themes/addons/favicons",
            "themes/addons/fonts",
            "themes/addons/images",
            "themes/addons/javascript"
        ],
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php",
            "behat.yml",
            "mysite/.htaccess",
            "mysite/_config.php",
            "mysite/_config/mysite.yml",
            "phpcs.xml.dist",
            "phpunit.xml.dist"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "install-frameworkmissing.html",
            "install.php",
            "web.config"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
